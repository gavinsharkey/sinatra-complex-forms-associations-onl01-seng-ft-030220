<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label for="pet_name">Pet Name: </label>
  <input type="text" name="pet[name]" id="pet_name"><br />

  <h2>Select and/or make an Owner </h2>

  <h3>Existing Owners: </h3>
  <% @owners.each do |owner| %>
    <label for="<%= owner.id %>"><%= owner.name %></label>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><br />
  <% end %>

  <h3>New Owner: </h3>

  <label for="owner_name">Owner Name: </label>
  <input type="text" name="owner[name]" id="owner_name"><br />

  <input type='submit' value="Create Pet">
</form>